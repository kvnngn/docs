{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Match & Play",
  "colors": {
    "primary": "#8B5CF6",
    "light": "#A78BFA",
    "dark": "#7C3AED"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "User Guide",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "getting-started", "profile-setup"]
          },
          {
            "group": "Finding Players",
            "pages": ["player-discovery", "gaming-availability", "matching-preferences"]
          },
          {
            "group": "Communication",
            "pages": ["messaging", "connections", "notifications"]
          },
          {
            "group": "Safety & Community",
            "pages": ["community-guidelines", "safety-features", "reporting"]
          }
        ]
      },
      {
        "tab": "Features",
        "groups": [
          {
            "group": "Gaming Passport",
            "pages": [
              "features/gaming-passport",
              "features/game-library",
              "features/availability-system"
            ]
          },
          {
            "group": "Discovery Tools",
            "pages": [
              "features/smart-matching",
              "features/trending-games",
              "features/recommendations"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Sign Up",
          "href": "https://matchandplay.io/signup",
          "icon": "user-plus"
        },
        {
          "anchor": "Discord",
          "href": "https://discord.gg/matchandplay",
          "icon": "discord"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@matchandplay.io",
          "icon": "life-ring"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@matchandplay.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Launch App",
      "href": "https://matchandplay.io"
    }
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/matchandplay",
      "discord": "https://discord.gg/matchandplay",
      "instagram": "https://instagram.com/matchandplay"
    }
  }
}
